## pyro

assembly_name=rnode-assembly-0.5.1.jar

rnode() {
    java -jar $HOME/git/pyrofex/rchain/node/target/scala-2.12/$assembly_name ${@:1:99}
}

rnode_bootstrap() {
    bname="bootstrap"
    rnode run -s -p 60000
}

rnode_connect() {
    nname="node"$1
    java -Djava.net.preferIPv4Stack=true -jar $HOME/git/pyrofex/rchain/node/target/scala-2.12/$assembly_name -b "rnode://bootstrap@192.168.1.123:60000" -p $1 --http-port $2 --grpc-port $3 --metrics-port $4 -n $nname
}
